    "lodash.filter": "^4.6.0",
    "lodash.groupby": "^4.6.0",
    "markdown-it": "^12.0.6",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "posthog-react-native": "^1.1.3",
    "prop-types": "^15.7.2",
