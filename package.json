{
  "name": "@chatwoot/mobile-app",
  "version": "0.0.35",
  "private": true,
  "scripts": {
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "android": "react-native run-android",
    "android:clean": "cd android && ./gradlew clean",
    "android:release": "react-native run-android --variant=release",
    "android:publish": "cd android && ./gradlew clean && fastlane android beta",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@eva-design/eva": "^1.4.0",
    "@kesha-antonov/react-native-action-cable": "^1.0.5",
    "@react-native-community/async-storage": "^1.9.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/netinfo": "^5.8.0",
    "@react-navigation/bottom-tabs": "^5.2.7",
    "@react-navigation/native": "^5.1.6",
    "@react-navigation/stack": "^5.2.13",
    "@sentry/react-native": "^1.3.7",
    "@ui-kitten/components": "4.4.1",
    "@ui-kitten/eva-icons": "^4.4.1",
    "@ui-kitten/metro-config": "^4.4.1",
    "axios": "^0.19.2",
    "i18n-js": "^3.5.1",
    "lodash.groupby": "^4.6.0",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-native": "^0.62.2",
    "react-native-animatable": "^1.3.3",
    "react-native-background-color": "^0.0.8",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-image-pan-zoom": "^2.1.11",
    "react-native-reanimated": "^1.8.0",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.5.0",
    "react-native-snackbar": "^2.2.0",
    "react-native-svg": "^12.1.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "tcomb-form-native": "^0.6.20",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-jest": "^25.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "src/.*.spec.(js|jsx)$"
  }
}
