    "react-native-clean-project": "^3.6.4",
    "react-native-storybook-loader": "^2.0.5",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "src/.*.spec.(js|jsx)$",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ]
  }
}
