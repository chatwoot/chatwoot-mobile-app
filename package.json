    "babel-plugin-module-resolver": "^4.1.0",
    "detox": "^17.4.6",
    "eslint": "^6.5.1",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
